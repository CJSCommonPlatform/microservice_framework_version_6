  "properties": {
    "recipes": {
      "type": "array",
      "items": {
        "id": "/",
        "type": "object",
        "properties": {
          "name": {
            "id": "name",
            "type": "string"
          },
          "id": {
            "id": "recipeId",
            "type": "string"
          },
          "glutenFree": {
            "id": "glutenFree",
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "id"
        ]
      }
    }
  },
  "required": [
    "recipes"
  ]
}
