<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet
            id="event-buffer-003"
            author="TechPod"
            logicalFilePath="003-add-source-to-stream-status.changelog.xml">

        <dropPrimaryKey
                constraintName="pk_stream_status"
                tableName="stream_status"
        />

        <addColumn tableName="stream_status">
            <column
                    name="source"
                    type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addPrimaryKey
                tableName="stream_status"
                constraintName="stream_status_pkey"
                columnNames="stream_id,version,source"
        />

        <rollback>
            <dropPrimaryKey
                    constraintName="stream_status_pkey"
                    tableName="stream_status"
            />
            <dropColumn tableName="stream_status">
                <column
                        name="source"
                        type="varchar(100)"
                />
            </dropColumn>
            <addPrimaryKey
                    tableName="pk_stream_status"
                    constraintName="pk_stream_status"
                    columnNames="stream_id"
            />
        </rollback>

    </changeSet>
</databaseChangeLog>
