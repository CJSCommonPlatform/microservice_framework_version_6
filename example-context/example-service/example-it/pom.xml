                                <id>copy-wars</id>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>uk.gov.justice.services.example</groupId>
                                            <artifactId>example-single</artifactId>
                                            <version>${project.version}</version>
                                            <type>war</type>
                                            <destFileName>example-single.war</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

